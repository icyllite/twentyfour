<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Material3.CardView.Filled"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="?attr/colorSecondaryContainer"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/playbackSpeedMaterialButton"
            style="@style/Theme.Twentyfour.NowPlayingFragment.BottomBarButton"
            android:tooltipText="@string/playback_speed"
            tools:text="1Ã—" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/audioInformationMaterialButton"
            style="@style/Theme.Twentyfour.NowPlayingFragment.BottomBarButton"
            android:tooltipText="@string/audio_information"
            app:icon="@drawable/ic_info" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/equalizerMaterialButton"
            style="@style/Theme.Twentyfour.NowPlayingFragment.BottomBarButton"
            android:tooltipText="@string/audio_effects"
            app:icon="@drawable/ic_audiofx" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/visualizerMaterialButton"
            style="@style/Theme.Twentyfour.NowPlayingFragment.BottomBarButton"
            android:tooltipText="@string/visualizer"
            app:icon="@drawable/ic_graphic_eq" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/queueMaterialButton"
            style="@style/Theme.Twentyfour.NowPlayingFragment.BottomBarButton"
            android:tooltipText="@string/queue"
            app:icon="@drawable/ic_queue_play_next" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/isFavoriteMaterialButton"
            style="@style/Theme.Twentyfour.NowPlayingFragment.BottomBarButton"
            android:tooltipText="@string/add_to_favorites"
            android:visibility="gone"
            app:icon="@drawable/ic_heart_unfilled" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
